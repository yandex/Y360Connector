<Window x:Class="Y360OutlookConnector.Ui.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Y360OutlookConnector.Ui"
        xmlns:l10n="clr-namespace:Y360OutlookConnector.Localization"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="{x:Static l10n:Strings.LoginWindow_WindowTitle}"
        Height="732" Width="894" Icon="/Y360OutlookConnector;component/Resources/AppIcon.ico">
    <Grid>
        <ContentControl x:Name="CurrentPage" 
                        Panel.ZIndex="0" />
        <local:Throbber x:Name="Throbber" 
                        Width="44" Height="44"
                        Visibility="Collapsed"
                        Panel.ZIndex="1" />
    </Grid>
</Window>
